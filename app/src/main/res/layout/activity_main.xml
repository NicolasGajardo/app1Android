<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.inacap.nicolas.app1.MainActivity"
    android:gravity="center_horizontal">

    <TextView
        android:id="@+id/txv_titulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/titulo_aplicacion"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/edt_patente"
        android:inputType="text"
        android:maxLength="6"
        android:hint="@string/hint_patente"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/edt_marca"
        android:maxLength="20"
        android:inputType="text"
        android:hint="@string/hint_marca"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:hint="@string/hint_modelo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Spinner
        android:id="@+id/spn_modelo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"></Spinner>

    <EditText
        android:id="@+id/edt_anio"
        android:maxLength="4"
        android:inputType="number"
        android:hint="@string/hint_anio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/edt_valor_uf"
        android:inputType="numberDecimal"
        android:maxLength="15"
        android:hint="@string/hint_valor_uf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/btn_consultar"
        android:text="@string/boton_consultar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>
